<!--add-hero.hbs.-->
{{#partial "content"}}

    <h1>Add hero </h1>
    <form action='/add-hero-submit' method="post">
        <div class="form-group">
            <label for="name">Hero name</label>
            <input id="name" name="name" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="age">Age</label>
            <input id="age" name="age" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="power">Special power</label>
            <input id="power" name="power" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="weakness">Weakness</label>
            <input id="weakness" name="weakness" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="squad">Squad</label>
            <input id="squad" name="squad" class="form-control" type="text">
        </div>

        <button type="submit" class="btn">Go!</button>
    </form>
    <!--add-hero.hbs.-->
{{/partial}}

